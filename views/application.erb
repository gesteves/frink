    <meta property="og:url" content="<%= "#{request.scheme}://#{request.host_with_port}" %>"/>
    <meta property="og:image" content="https://i.imgur.com/XB1swAP.jpg" />
    <meta property="og:site_name" content="Frink"/>
    <meta property="og:description" content="A Slack app for posting Simpsons gifs from Frinkiac."/>
    <meta name="twitter:card" content="summary_large_image" />
